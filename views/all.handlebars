<h2>Todas as Tarefas:</h2>

<div class="filter-buttons">
  <a href="/tasks?filter=concluidas"><button class="btn-filtro btn-concluidas">ConcluÃ­das</button></a>
  <a href="/tasks?filter=pendentes"><button class="btn-filtro btn-pendentes">Pendentes</button></a>
  <a href="/tasks"><button type="reset" class="btn-filtro btn-limpar">âœ–</button></a>
</div>

<br>

{{#if tasks.length}}
    <ul class="task-list">
        {{#each tasks}}
            <li class="task-item {{this.priorityClass}}">
                <div class="task-main {{#if this.done}}task-done{{/if}}">
                    <div class="task-title">{{this.title}}</div>
                    <div class="task-desc">{{this.description}}</div>
                </div>
                <div class="task-meta">
                    <div class="task-status">{{#if this.done}}âœ… ConcluÃ­da{{else}}ðŸ•— Pendente{{/if}}</div>
                    <div class="task-priority">Prioridade: <span class="priority-label">{{this.priority}}</span></div>
                    <div class="task-priority">Prazo: <span class="priority-label">{{formatDate this.dueDate}}</span></div>
                    <div class="task-actions">
                        <a class="btn btn-edit" href="/tasks/edit/{{this.id}}">Editar</a>
                        <form style="display:inline;" method="post" action="/tasks/delete">
                            <input type="hidden" name="id" value="{{this.id}}"/>
                            <button class="btn btn-delete" type="submit">Excluir</button>
                        </form>
                    </div>
                </div>
            </li>
        {{/each}}
    </ul>
{{else}}
